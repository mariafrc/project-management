{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~module/*": ["src/module/*"],
      "~entity/*": ["src/entity/*"],
      "~guard/*": ["src/guard/*"]
    }
  },
  "exclude": ["node_modules", "dist", "client"]
}
